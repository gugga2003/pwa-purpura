generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum IncidentStatus {
  OPEN
  RESOLVED
  IN_REVIEW
}

enum AlertType {
  WARNING
  INFO
  ERROR
  SYSTEM
  SECURITY
  NEWS
}

enum ProjectStatus {
  PLANNING
  IN_PROGRESS
  ON_HOLD
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  role      Role     @default(USER)
  territory String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
  incidents Incident[]
  drafts    Draft[]
  alerts    Alert[]
}

model Task {
  id            String     @id @default(uuid())
  title         String
  description   String?
  status        TaskStatus @default(PENDING)
  priority      Priority   @default(MEDIUM)
  category      String?
  territory     String?
  dueDate       DateTime?
  subtasksDone  Int        @default(0)
  subtasksTotal Int        @default(0)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  assignee   User? @relation(fields: [assigneeId], references: [id])
  assigneeId String?
}

model Incident {
  id          String         @id @default(uuid())
  title       String
  description String?
  severity    Priority       @default(LOW)
  status      IncidentStatus @default(OPEN)
  location    String?
  territory   String?
  images      String[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime   @updatedAt

  reporter   User? @relation(fields: [reporterId], references: [id])
  reporterId String?
}

model Alert {
  id        String    @id @default(uuid())
  title     String
  message   String?
  type      AlertType @default(INFO)
  isRead    Boolean   @default(false)
  createdAt DateTime  @default(now())

  user   User? @relation(fields: [userId], references: [id])
  userId String?
}

model Project {
  id           String        @id @default(uuid())
  title        String
  status       ProjectStatus @default(PLANNING)
  deadline     DateTime?
  completedKpis Int           @default(0)
  totalKpis    Int           @default(0)
  description  String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Draft {
  id           String   @id @default(uuid())
  title        String
  type         String
  progress     Int      @default(0)
  content      Json?
  lastModified DateTime @updatedAt
  createdAt    DateTime @default(now())

  user   User? @relation(fields: [userId], references: [id])
  userId String?
}
